{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {   
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "preserve",
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  }
}
